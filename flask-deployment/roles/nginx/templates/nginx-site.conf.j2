server {
    listen                  443 ssl http2;
    listen                  [::]:443 ssl http2;
    server_name             {{ domain_name }};
    root                    {{ document_root }};

    # SSL
    ssl_certificate         /etc/letsencrypt/live/itnsa.com/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/itnsa.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/itnsa.com/chain.pem;

    # security
    include                 nginxconfig.io/security.conf;

    # logging
    access_log              /var/log/nginx/itnsa.access.log combined buffer=512k flush=1m;
    error_log               /var/log/nginx/itnsa.error.log warn;

    # reverse proxy
    location / {
        proxy_pass            http://127.0.0.1:8000;
        proxy_set_header Host $host;
        include               nginxconfig.io/proxy.conf;
    }

    # additional config
    include nginxconfig.io/general.conf;
}

# subdomains redirect
server {
    listen                  443 ssl http2;
    listen                  [::]:443 ssl http2;
    server_name             *.itnsa.com;

    # SSL
    ssl_certificate         /etc/letsencrypt/live/itnsa.com/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/itnsa.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/itnsa.com/chain.pem;
    return                  301 https://itnsa.com$request_uri;
}

# HTTP redirect
server {
    listen      80;
    listen      [::]:80;
    server_name .itnsa.com;
    include     nginxconfig.io/letsencrypt.conf;

    location / {
        return 301 https://itnsa.com$request_uri;
    }
}